<% for(let i = 0; i < even.length; i++) { %>
<div class="card" style="width: 20rem;">
    <img class="card-img-top" width="200" height="100" src="<%="http://localhost:3000/api/view/" + even[i].titlePhoto.toString()%>" alt="Card image cap">
    <div class="card-body">
        <h4 class="card-title"><%= even[i].title.toString() %></h4>
        <p class="card-text"><%= even[i].text.toString() %></p>
        <a href="#" class="btn btn-primary">Details</a>
    </div>
</div>
<% } %>
</body>
